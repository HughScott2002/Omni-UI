# Hunzo-UI Environment Configuration
# Copy this file to .env.local and fill in the values

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost
NEXT_PUBLIC_NOTIFICATION_API=http://localhost
NEXT_PUBLIC_NOTIFICATION_WS=ws://localhost

# Request Configuration
NEXT_PUBLIC_REQUEST_TIMEOUT=30000
NEXT_PUBLIC_MAX_RETRIES=3
NEXT_PUBLIC_RETRY_DELAY=1000

# Feature Flags (set to 'false' to disable)
NEXT_PUBLIC_ENABLE_VIRTUAL_CARDS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_FRAUD_DETECTION=true

# Production Example (uncomment and modify for production):
# NEXT_PUBLIC_API_BASE_URL=https://api.hunzo.com
# NEXT_PUBLIC_NOTIFICATION_API=https://notifications.hunzo.com
# NEXT_PUBLIC_NOTIFICATION_WS=wss://notifications.hunzo.com
